---
// Header component for navigation
---

<header class="bg-white shadow-lg fixed w-full top-0 z-50">
    <nav class="bg-white border-gray-200">
        <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
            <a href={import.meta.env.BASE_URL} class="flex items-center space-x-3 rtl:space-x-reverse">
                <span class="self-center text-2xl font-bold whitespace-nowrap text-primary-700 font-heading">
                    Térkövezés Budapest
                </span>
            </a>
            
            <div class="flex items-center md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
                <a href={`${import.meta.env.BASE_URL}kapcsolat`} class="text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-4 py-2 text-center transition-colors duration-200">
                    Ajánlatkérés
                </a>
                <button data-collapse-toggle="navbar-cta" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200" aria-controls="navbar-cta" aria-expanded="false">
                    <span class="sr-only">Open main menu</span>
                    <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
                    </svg>
                </button>
            </div>
            
            <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-cta">
                <ul class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-white">
                    <li>
                        <a href={import.meta.env.BASE_URL} class="block py-2 px-3 md:p-0 text-white bg-primary-700 rounded md:bg-transparent md:text-primary-700 md:hover:text-primary-800 transition-colors duration-200" aria-current="page">Fõoldal</a>
                    </li>
                    <li class="relative group">
                        <button class="flex items-center py-2 px-3 md:p-0 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-primary-700 transition-colors duration-200">
                            Szolgáltatások
                            <svg class="w-4 h-4 ml-1" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1l4 4 4-4"/>
                            </svg>
                        </button>
                        <div class="absolute top-full left-0 mt-2 w-64 bg-white rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                            <div class="py-2">
                                <a href={`${import.meta.env.BASE_URL}kocsibeallo-terkovezes`} class="block px-4 py-3 text-sm text-gray-900 hover:bg-gray-100 hover:text-primary-700 transition-colors duration-200">
                                    <strong>Kocsibeálló Térkövezés</strong><br>
                                    <span class="text-gray-600 text-xs">Tartós és gyönyörû</span>
                                </a>
                                <a href={`${import.meta.env.BASE_URL}terasz-terkovezes`} class="block px-4 py-3 text-sm text-gray-900 hover:bg-gray-100 hover:text-primary-700 transition-colors duration-200">
                                    <strong>Terasz Térkövezés</strong><br>
                                    <span class="text-gray-600 text-xs">Elegáns és funkcionális</span>
                                </a>
                                <a href={`${import.meta.env.BASE_URL}kert-jarda-terkovezes`} class="block px-4 py-3 text-sm text-gray-900 hover:bg-gray-100 hover:text-primary-700 transition-colors duration-200">
                                    <strong>Kert és Járda Térkövezés</strong><br>
                                    <span class="text-gray-600 text-xs">Kerti utak, járófelületek</span>
                                </a>
                                <a href={`${import.meta.env.BASE_URL}tervezes-tanacsadas`} class="block px-4 py-3 text-sm text-gray-900 hover:bg-gray-100 hover:text-primary-700 transition-colors duration-200">
                                    <strong>Tervezés és Tanácsadás</strong><br>
                                    <span class="text-gray-600 text-xs">Helyszíni felmérés</span>
                                </a>
                            </div>
                        </div>
                    </li>
                    <li>
                        <a href={`${import.meta.env.BASE_URL}terko-tipusok`} class="block py-2 px-3 md:p-0 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-primary-700 transition-colors duration-200">Térkõ típusok</a>
                    </li>
                    <li>
                        <a href={`${import.meta.env.BASE_URL}referenciak`} class="block py-2 px-3 md:p-0 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-primary-700 transition-colors duration-200">Referenciák</a>
                    </li>
                    <li>
                        <a href={`${import.meta.env.BASE_URL}arak`} class="block py-2 px-3 md:p-0 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-primary-700 transition-colors duration-200">Árak</a>
                    </li>
                    <li>
                        <a href={`${import.meta.env.BASE_URL}kapcsolat`} class="block py-2 px-3 md:p-0 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-primary-700 transition-colors duration-200">Kapcsolat</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<!-- Spacer for fixed header -->
<div class="h-20"></div>

<script>
    // Mobile menu toggle functionality
    document.addEventListener('DOMContentLoaded', function() {
        const mobileMenuButton = document.querySelector('[data-collapse-toggle="navbar-cta"]');
        const mobileMenu = document.getElementById('navbar-cta');
        
        if (mobileMenuButton && mobileMenu) {
            console.log('?? Mobile menu initialized');
            
            mobileMenuButton.addEventListener('click', function() {
                console.log('??? Mobile menu button clicked');
                
                // Toggle the hidden class
                mobileMenu.classList.toggle('hidden');
                
                // Update aria-expanded
                const isExpanded = !mobileMenu.classList.contains('hidden');
                mobileMenuButton.setAttribute('aria-expanded', isExpanded.toString());
                
                console.log(`?? Menu is now ${isExpanded ? 'open' : 'closed'}`);
            });
            
            // Close menu when clicking outside
            document.addEventListener('click', function(event) {
                if (!mobileMenuButton.contains(event.target) && !mobileMenu.contains(event.target)) {
                    if (!mobileMenu.classList.contains('hidden')) {
                        mobileMenu.classList.add('hidden');
                        mobileMenuButton.setAttribute('aria-expanded', 'false');
                        console.log('?? Menu closed by clicking outside');
                    }
                }
            });
        } else {
            console.error('? Mobile menu elements not found');
        }
    });
</script>
