    // Event listeners
    document.querySelectorAll('.use-case-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            selections.useCase = this.dataset.value;
            selectButton(this, 'use-case-btn');
            showNextStep('step-2');
        });
    });

    document.querySelectorAll('.budget-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            selections.budget = this.dataset.value;
            selectButton(this, 'budget-btn');
            showNextStep('step-3');
        });
    });

    document.querySelectorAll('.style-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            selections.style = this.dataset.value;
            selectButton(this, 'style-btn');
            showResult();
        });
    });

    document.getElementById('restart-btn').addEventListener('click', function() {
        restartTool();
    });

    function selectButton(selectedBtn, className) {
        document.querySelectorAll('.' + className).forEach(btn => btn.classList.remove('selected'));
        selectedBtn.classList.add('selected');
    }

    function showNextStep(stepId) {
        document.querySelectorAll('.step').forEach(step => step.classList.add('hidden'));
        document.getElementById(stepId).classList.remove('hidden');
    }

    function showResult() {
        // Kulcs generőlésa az ajánléshoz
        const key = `${selections.useCase}-${selections.budget}-${selections.style}`;
        let recommendation = terkoDatabase[key];
        
        // Fallback logika ha nincs pontos egyezés
        if (!recommendation) {
            // Alapártelmezett ajánlésok használat alapján
            if (selections.useCase === 'kocsibeallo') {
                if (selections.budget === 'low') recommendation = terkoDatabase['kocsibeallo-low-klasszikus'];
                else if (selections.budget === 'medium') recommendation = terkoDatabase['kocsibeallo-medium-klasszikus'];
                else recommendation = terkoDatabase['kocsibeallo-high-klasszikus'];
            } else if (selections.useCase === 'terasz') {
                if (selections.budget === 'low') recommendation = terkoDatabase['terasz-low-modern'];
                else if (selections.budget === 'medium') recommendation = terkoDatabase['terasz-medium-modern'];
                else recommendation = terkoDatabase['terasz-high-modern'];
            } else if (selections.useCase === 'jarda') {
                if (selections.budget === 'low') recommendation = terkoDatabase['jarda-low-klasszikus'];
                else if (selections.budget === 'medium') recommendation = terkoDatabase['jarda-medium-klasszikus'];
                else recommendation = terkoDatabase['jarda-high-klasszikus'];
            }
        }

        // Ajánlés megjelenátése
        if (recommendation) {
            const recommendationHTML = `
                <div class="bg-white rounded-lg p-6 border-l-4 border-green-500">
                    <div class="flex items-center mb-4">
                        <span class="text-4xl mr-3">${recommendation.icon}</span>
                        <div>
                            <h4 class="text-2xl font-bold text-concrete-800">${recommendation.type}</h4>
                            <p class="text-lg font-semibold text-primary-600">${recommendation.price}</p>
                        </div>
                    </div>
                    <p class="text-concrete-700 mb-4">${recommendation.description}</p>
                    <div class="grid md:grid-cols-2 gap-4">
                        <div>
                            <h5 class="font-semibold mb-2">Előnyök:</h5>
                            <ul class="text-sm space-y-1">
                                ${recommendation.pros.map(pro => `<li>• ${pro}</li>`).join('')}
                            </ul>
                        </div>
                    </div>
                </div>
            `;
            document.getElementById('recommendation').innerHTML = recommendationHTML;
        }

        document.querySelectorAll('.step').forEach(step => step.classList.add('hidden'));
        document.getElementById('result').classList.remove('hidden');
    }

    function restartTool() {
        selections = { useCase: '', budget: '', style: '' };
        document.querySelectorAll('button').forEach(btn => btn.classList.remove('selected'));
        document.querySelectorAll('.step').forEach(step => step.classList.add('hidden'));
        document.getElementById('result').classList.add('hidden');
        document.getElementById('step-1').classList.remove('hidden');
    }
});
</script>
