                else if (selections.budget === 'medium') recommendation = terkoDatabase['jarda-medium-klasszikus'];
                else recommendation = terkoDatabase['jarda-high-klasszikus'];
            }
        }

        // Ajánlás megjelenítése
        if (recommendation) {
            const recommendationHTML = `
                <div class="bg-white rounded-lg p-6 border-l-4 border-green-500">
                    <div class="flex items-center mb-4">
                        <span class="text-4xl mr-3">${recommendation.icon}</span>
                        <div>
                            <h4 class="text-2xl font-bold text-concrete-800">${recommendation.type}</h4>
                            <p class="text-lg font-semibold text-primary-600">${recommendation.price}</p>
                        </div>
                    </div>
                    <p class="text-concrete-700 mb-4">${recommendation.description}</p>
                    <div class="grid md:grid-cols-2 gap-4">
                        <div>
                            <h5 class="font-semibold mb-2">? Elõnyök:</h5>
                            <ul class="text-sm space-y-1">
                                ${recommendation.pros.map(pro => `<li>• ${pro}</li>`).join('')}
                            </ul>
                        </div>
                    </div>
                </div>
            `;
            document.getElementById('recommendation').innerHTML = recommendationHTML;
        }

        document.querySelectorAll('.step').forEach(step => step.classList.add('hidden'));
        document.getElementById('result').classList.remove('hidden');
    }

    function restartTool() {
        selections = { useCase: '', budget: '', style: '' };
        document.querySelectorAll('button').forEach(btn => btn.classList.remove('selected'));
        document.querySelectorAll('.step').forEach(step => step.classList.add('hidden'));
        document.getElementById('result').classList.add('hidden');
        document.getElementById('step-1').classList.remove('hidden');
    }
});
</script>
