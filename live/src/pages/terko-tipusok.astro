---
import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { MaterialCarousel } from '../components/ui/material-carousel.tsx';
import PatternSelector from '../components/ui/pattern-selector.tsx';
import ColorSelector from '../components/ui/color-selector.tsx';
import UsageSelector from '../components/ui/usage-selector.tsx';
---

<Layout title="Térkő Típusok Budapest - Útmutató a Megfelelő Választáshoz 2025" description="Komplett térkő típusok útmutató: beton térkövek, természetes kövek, speciális burkolatok. Szakértői tanácsok a választáshoz és használathoz. Ingyenes konzultáció!">
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" is:inline>
    {
        "@context": "https://schema.org",
        "@type": "Article",
        "headline": "Térkő Típusok Útmutatója - Minden Amit Tudni Kell 2025",
        "description": "Átfogó útmutató a különböző térkő típusokról, használatukról és választásukról. Szakértői tanácsok és gyakorlati információk.",
        "author": {
            "@type": "Organization",
            "name": "Térkövezés Budapest"
        },
        "publisher": {
            "@type": "Organization",
            "name": "Térkövezés Budapest",
            "logo": {
                "@type": "ImageObject",
                "url": "https://terkovezes-budapest.hu/logo.png"
            }
        },
        "datePublished": "2025-01-01",
        "dateModified": "2025-01-01",
        "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": "https://terkovezes-budapest.hu/terko-tipusok"
        },
        "image": "https://storage.googleapis.com/joszaki-reference-photos/normal/sulak-robert-bela-terkovezes-burkolo-jjxbdv0kv4",
        "articleSection": "Útmutatók",
        "keywords": "térkő típusok, beton térkövek, természetes kő, térkövezés, burkolat, kocsibejáró, terasz",
        "about": [
            {
                "@type": "Thing",
                "name": "Beton Térkövek",
                "description": "Tartós és sokoldalú térkő megoldások"
            },
            {
                "@type": "Thing", 
                "name": "Természetes Kő Burkolatok",
                "description": "Prémium minőségű természetes kövek"
            }
        ]
    }
    </script>

    <!-- Organization Schema -->
    <script type="application/ld+json" is:inline>
    {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Térkövezés Budapest",
        "url": "https://terkovezes-budapest.hu",
        "logo": "https://terkovezes-budapest.hu/logo.png",
        "description": "Professzionális térkövezési szolgáltatésok Budapesten és környékén",
        "address": {
            "@type": "PostalAddress",
            "addressLocality": "Budapest",
            "addressCountry": "HU"
        },
        "contactPoint": {
            "@type": "ContactPoint",
            "telephone": "+36-XX-XXX-XXXX",
            "contactType": "customer service"
        },
        "sameAs": [
            "https://www.facebook.com/terkovezes-budapest",
            "https://www.instagram.com/terkovezes-budapest"
        ]
    }
    </script>
    <Header />
    
    <!-- Breadcrumb -->
    <nav class="bg-concrete-50 py-4">
        <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
            <ol class="flex items-center space-x-2 text-sm text-concrete-600">
                <li><a href={import.meta.env.BASE_URL} class="hover:text-primary-600">Főoldal</a></li>
                <li class="flex items-center">
                    <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-concrete-800 font-medium">Térkő típusok</span>
                </li>
            </ol>
        </div>
    </nav>
    
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-concrete-50 to-concrete-100 py-16 lg:py-24">
        <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h1 class="text-4xl lg:text-6xl font-bold text-concrete-800 font-heading mb-6">
                    <span class="text-primary-600">Térkő Típusok</span>
                </h1>
                <p class="text-xl text-concrete-600 mb-8 leading-relaxed max-w-4xl mx-auto">
                    Komplett szakértői útmutató a térkövezés világához: beton térkövek, természetes kövek, speciális burkolatok. 
                    Minden amit tudnia kell a megfelelő térkő kiválasztésához és használatához.
                </p>
            </div>
        </div>
    </section>

    <!-- Anyag szerinti választás -->
    <MaterialCarousel client:load />

    <!-- Mintázat és forma választás -->
    <PatternSelector client:load />

    <!-- Szín választás -->
    <ColorSelector client:load />

    <!-- Használati cél szerinti választás -->
    <UsageSelector client:load />



    <!-- Beton Térkövek Section -->
    <section id="beton-terkovek" class="py-16 lg:py-24 bg-concrete-50">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-3xl lg:text-4xl font-bold text-concrete-800 font-heading mb-4">
                    Beton Térkövek - A Legsokoldalúbb Megoldás
                </h2>
                <p class="text-xl text-concrete-600 max-w-4xl mx-auto mb-8">
                    A beton térkövek a leggyakrabban használt burkolóanyagok, melyek ötvözik a tartósságot, 
                    a megfizethetés árakat és a szinte korlátlan designlehetéségeket.
                </p>
                
                <!-- Beton térkő előnyei infografika -->
                <div class="bg-white rounded-xl p-8 shadow-lg mb-12">
                    <h3 class="text-2xl font-semibold text-concrete-800 mb-6">Miért népszerűek a beton térkövek</h3>
                    <div class="grid md:grid-cols-4 gap-6">
                        <div class="text-center">
                            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-3">
                                <span class="text-2xl">⭐⭐⭐</span>
                            </div>
                            <div class="text-lg font-semibold text-concrete-800">Megfizethető</div>
                            <div class="text-sm text-concrete-600">3.500-8.000 Ft/m2</div>
                        </div>
                        <div class="text-center">
                            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-3">
                                <span class="text-2xl"></span>
                            </div>
                            <div class="text-lg font-semibold text-concrete-800">Tartós</div>
                            <div class="text-sm text-concrete-600">20-30 év élettartam</div>
                        </div>
                        <div class="text-center">
                            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-3">
                                <span class="text-2xl">⭐⭐⭐</span>
                            </div>
                            <div class="text-lg font-semibold text-concrete-800">Változatos</div>
                            <div class="text-sm text-concrete-600">Sokféle szín és forma</div>
                        </div>
                        <div class="text-center">
                            <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-3">
                                <span class="text-2xl">✓</span>
                            </div>
                            <div class="text-lg font-semibold text-concrete-800">Gyors</div>
                            <div class="text-sm text-concrete-600">Könnyű telepítés</div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="grid lg:grid-cols-3 md:grid-cols-2 gap-8 mb-16">
                <!-- Antik Térkő -->
                <div class="bg-white border border-concrete-200 rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
                    <img src="https://storage.googleapis.com/joszaki-reference-photos/normal/sulak-robert-bela-terkovezes-burkolo-jjxbdv0kv4" 
                         alt="Antik térkő mintája - klasszikus koptatott felület" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <div class="flex items-center justify-between mb-3">
                            <h3 class="text-xl font-semibold text-concrete-800">Antik Térkő</h3>
                            <span class="px-3 py-1 bg-primary-100 text-primary-700 text-xs font-medium rounded-full">
                                Népszerű
                            </span>
                        </div>
                        <p class="text-concrete-600 mb-4 text-sm leading-relaxed">
                            Klasszikus megjelenés koptatott felülettel. Tökéletes hagyományos stílusú projektekhez, 
                            különösen családi házak bejárójához és kertjéhez.
                        </p>
                        
                        <div class="space-y-3">
                            <div>
                                <h4 class="font-medium text-concrete-800 text-sm mb-2">Jellemzők:</h4>
                                <ul class="text-xs text-concrete-600 space-y-1">
                                    <li>• Koptatott, rusztikus felület</li>
                                    <li>• Változatos színek: szürke, barna, vörös</li>
                                    <li>• 6-8 cm vastagság</li>
                                    <li>• Csúszésmentes textúra</li>
                                </ul>
                            </div>
                            
                            <div class="border-t pt-3">
                                <h4 class="font-medium text-concrete-800 text-sm mb-2">Ajánlott használat:</h4>
                                <div class="flex flex-wrap gap-1">
                                    <span class="px-2 py-1 bg-concrete-100 text-concrete-700 text-xs rounded">Kocsibejáró</span>
                                    <span class="px-2 py-1 bg-concrete-100 text-concrete-700 text-xs rounded">Terasz</span>
                                    <span class="px-2 py-1 bg-concrete-100 text-concrete-700 text-xs rounded">Járda</span>
                                </div>
                            </div>
                            
                            <div class="border-t pt-3">
                                <div class="flex justify-between items-center">
                                    <span class="text-sm font-medium text-concrete-800">Ár/m2:</span>
                                    <span class="text-lg font-bold text-primary-600">4.500-6.500 Ft</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modern Térkő -->
                <div class="bg-white border border-concrete-200 rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
                    <img src="https://storage.googleapis.com/joszaki-reference-photos/normal/sandor-lakatos-terkovezes-awg1ql30f8" 
                         alt="Modern térkő mintája - egyenes vonalú elegáns burkolat" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <div class="flex items-center justify-between mb-3">
                            <h3 class="text-xl font-semibold text-concrete-800">Modern Térkő</h3>
                            <span class="px-3 py-1 bg-green-100 text-green-700 text-xs font-medium rounded-full">
                                Trend
                            </span>
                        </div>
                        <p class="text-concrete-600 mb-4 text-sm leading-relaxed">
                            Sima, egyenletes felület modern építészeti stílushoz. Minimál design kedvelőinek, 
                            nagyméretű lapokkal tiszta vonalakat biztosít.
                        </p>
                        
                        <div class="space-y-3">
                            <div>
                                <h4 class="font-medium text-concrete-800 text-sm mb-2">Jellemzők:</h4>
                                <ul class="text-xs text-concrete-600 space-y-1">
                                    <li>• Sima, egyenletes felület</li>
                                    <li>• Nagy méretű lapok (40x40, 60x30 cm)</li>
                                    <li>• 5-6 cm vastagság</li>
                                    <li>• Semleges színpaletta</li>
                                </ul>
                            </div>
                            
                            <div class="border-t pt-3">
                                <h4 class="font-medium text-concrete-800 text-sm mb-2">Ajánlott használat:</h4>
                                <div class="flex flex-wrap gap-1">
                                    <span class="px-2 py-1 bg-concrete-100 text-concrete-700 text-xs rounded">Terasz</span>
                                    <span class="px-2 py-1 bg-concrete-100 text-concrete-700 text-xs rounded">Bejáró</span>
                                    <span class="px-2 py-1 bg-concrete-100 text-concrete-700 text-xs rounded">Pool deck</span>
                                </div>
                            </div>
                            
                            <div class="border-t pt-3">
                                <div class="flex justify-between items-center">
                                    <span class="text-sm font-medium text-concrete-800">Ár/m2:</span>
                                    <span class="text-lg font-bold text-primary-600">5.500-8.000 Ft</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Színes Térkő -->
                <div class="bg-white border border-concrete-200 rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
                    <img src="https://storage.googleapis.com/joszaki-reference-photos/normal/horvath-ervin-terkovezes-bpxryuh3gb" 
                         alt="Színes térkő mintája - élénk színek kreatív mintázatokhoz" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <div class="flex items-center justify-between mb-3">
                            <h3 class="text-xl font-semibold text-concrete-800">Színes Térkő</h3>
                            <span class="px-3 py-1 bg-orange-100 text-orange-700 text-xs font-medium rounded-full">
                                Kreatív
                            </span>
                        </div>
                        <p class="text-concrete-600 mb-4 text-sm leading-relaxed">
                            élénk színekkel készült térkövek kreatív mintázatok és kombináciák kialakításához. 
                            Egyedi designlehetőségek korlátlan számban.
                        </p>
                        
                        <div class="space-y-3">
                            <div>
                                <h4 class="font-medium text-concrete-800 text-sm mb-2">Jellemzők:</h4>
                                <ul class="text-xs text-concrete-600 space-y-1">
                                    <li>• Széles színpaletta (10+ szín)</li>
                                    <li>• Egyedi minták lehetősége</li>
                                    <li>• Tartós UV-álló pigmentezés</li>
                                    <li>• Különböz• felületkezelések</li>
                                </ul>
                            </div>
                            
                            <div class="border-t pt-3">
                                <h4 class="font-medium text-concrete-800 text-sm mb-2">Ajánlott használat:</h4>
                                <div class="flex flex-wrap gap-1">
                                    <span class="px-2 py-1 bg-concrete-100 text-concrete-700 text-xs rounded">Kerti utak</span>
                                    <span class="px-2 py-1 bg-concrete-100 text-concrete-700 text-xs rounded">Játszótér</span>
                                    <span class="px-2 py-1 bg-concrete-100 text-concrete-700 text-xs rounded">Dészátés</span>
                                </div>
                            </div>
                            
                            <div class="border-t pt-3">
                                <div class="flex justify-between items-center">
                                    <span class="text-sm font-medium text-concrete-800">Ár/m2:</span>
                                    <span class="text-lg font-bold text-primary-600">4.000-7.000 Ft</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Beton térkő típusok részletes Összehasonlítésa -->
            <div class="bg-white rounded-xl p-8 shadow-lg mb-12">
                <h3 class="text-2xl font-semibold text-concrete-800 mb-6">Beton Térkő Típusok Összehasonlítása</h3>
                <div class="overflow-x-auto">
                    <table class="w-full text-sm">
                        <thead>
                            <tr class="border-b-2 border-concrete-200">
                                <th class="text-left py-3 px-4 font-semibold text-concrete-800">Tulajdonság</th>
                                <th class="text-center py-3 px-4 font-semibold text-concrete-800">Antik</th>
                                <th class="text-center py-3 px-4 font-semibold text-concrete-800">Modern</th>
                                <th class="text-center py-3 px-4 font-semibold text-concrete-800">Színes</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="border-b border-concrete-100">
                                <td class="py-3 px-4 font-medium">Tartósság (Év)</td>
                                <td class="text-center py-3 px-4">25-30</td>
                                <td class="text-center py-3 px-4">20-25</td>
                                <td class="text-center py-3 px-4">20-25</td>
                            </tr>
                            <tr class="border-b border-concrete-100">
                                <td class="py-3 px-4 font-medium">Karbantartó</td>
                                <td class="text-center py-3 px-4">Alacsony</td>
                                <td class="text-center py-3 px-4">Közepes</td>
                                <td class="text-center py-3 px-4">Közepes</td>
                            </tr>
                            <tr class="border-b border-concrete-100">
                                <td class="py-3 px-4 font-medium">Csúszásmentesség</td>
                                <td class="text-center py-3 px-4">⭐⭐⭐⭐✓</td>
                                <td class="text-center py-3 px-4">⭐⭐⭐✓</td>
                                <td class="text-center py-3 px-4">⭐⭐⭐⭐</td>
                            </tr>
                            <tr class="border-b border-concrete-100">
                                <td class="py-3 px-4 font-medium">Design variációk</td>
                                <td class="text-center py-3 px-4">Közepes</td>
                                <td class="text-center py-3 px-4">Alacsony</td>
                                <td class="text-center py-3 px-4">Magas</td>
                            </tr>
                            <tr class="border-b border-concrete-100">
                                <td class="py-3 px-4 font-medium">Telepátés nehézsége</td>
                                <td class="text-center py-3 px-4">Közepes</td>
                                <td class="text-center py-3 px-4">Könnyű</td>
                                <td class="text-center py-3 px-4">Közepes</td>
                            </tr>
                            <tr>
                                <td class="py-3 px-4 font-medium">Átlagár (Ft/m2)</td>
                                <td class="text-center py-3 px-4 font-bold text-primary-600">4.500-6.500</td>
                                <td class="text-center py-3 px-4 font-bold text-primary-600">5.500-8.000</td>
                                <td class="text-center py-3 px-4 font-bold text-primary-600">4.000-7.000</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>

    <!-- Természetes K• Section -->
    <section id="termeszetes-ko" class="py-16 lg:py-24 bg-white">
        <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-3xl lg:text-4xl font-bold text-concrete-800 font-heading mb-4">
                    Természetes Kő Burkolatok - Prémium Megoldások
                </h2>
                <p class="text-xl text-concrete-600 max-w-4xl mx-auto mb-8">
                    A természetes kő burkolatok a legprémiumabb és legtartósabb megoldások közé tartoznak. 
                    Egyedi karakterükkel és természetes szépségükkel évtizedekre szóló értéket képviselnek.
                </p>
                
                <!-- Természetes kő előnyei -->
                <div class="bg-gradient-to-r from-green-50 to-blue-50 rounded-xl p-8 shadow-lg mb-12">
                    <h3 class="text-2xl font-semibold text-concrete-800 mb-6">Miért válassza a természetes kővet</h3>
                    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
                        <div class="text-center">
                            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-3">
                                <span class="text-2xl">⭐⭐⭐</span>
                            </div>
                            <div class="text-lg font-semibold text-concrete-800">Környezetbarát</div>
                            <div class="text-sm text-concrete-600">100% természetes anyag</div>
                        </div>
                        <div class="text-center">
                            <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-3">
                                <span class="text-2xl">⭐⭐⭐✓</span>
                            </div>
                            <div class="text-lg font-semibold text-concrete-800">Időtálló</div>
                            <div class="text-sm text-concrete-600">50-100+ Év élettartam</div>
                        </div>
                        <div class="text-center">
                            <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-3">
                                <span class="text-2xl">⭐⭐⭐</span>
                            </div>
                            <div class="text-lg font-semibold text-concrete-800">Egyedi</div>
                            <div class="text-sm text-concrete-600">Minden darab més</div>
                        </div>
                        <div class="text-center">
                            <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-3">
                                <span class="text-2xl">⭐⭐⭐</span>
                            </div>
                            <div class="text-lg font-semibold text-concrete-800">Értéknövelő</div>
                            <div class="text-sm text-concrete-600">Növeli az ingatlan Értékét</div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Természetes kő típusok részletesen -->
            <div class="grid lg:grid-cols-3 md:grid-cols-2 gap-8 mb-16">
                <!-- Gránit -->
                <div class="bg-white border border-concrete-200 rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
                    <img src="https://storage.googleapis.com/joszaki-reference-photos/normal/sulak-robert-bela-terkovezes-burkolo-ui145itd1q" 
                         alt="Gránit burkolat - tartós és fagyálló természetes kő" class="w-full h-48 object-cover">
                    <div class="p-6">
                        <div class="flex items-center justify-between mb-3">
                            <h3 class="text-xl font-semibold text-concrete-800">Gránit</h3>
                            <span class="px-3 py-1 bg-blue-100 text-blue-700 text-xs font-medium rounded-full">
                                Legkeményebb
                            </span>
                        </div>
                        <p class="text-concrete-600 mb-4 text-sm leading-relaxed">
                            A gránit az egyik legkeményebb és legtartósabb természetes kő. Rendkívüli ellenálló képessége miatt 
                            ideális választés nagy forgalmú területekre.
                        </p>
                        
                        <div class="space-y-3">
