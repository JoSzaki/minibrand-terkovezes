---
import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Terasz térkövezés Budapest - Elegáns és tartós megoldások 2025" description="Terasz térkövezés Budapest ? Elegáns design ? Vízelvezetés ? Antik és színes térköök ? 15+ év tapasztalat ? Ingyenes tervezés ? 5 év garancia">
    <Header />
    
    <!-- JSON-LD Schema Markup -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "Service",
        "name": "Terasz térkövezés Budapest",
        "description": "Professzionális terasz térkövezési szolgáltatások Budapesten és környékén. Elegáns design, vízelvezetés, antik és színes térköök.",
        "provider": {
            "@type": "LocalBusiness",
            "name": "Térkövezés Budapest",
            "@id": "https://terkovezes-budapest.hu",
            "address": {
                "@type": "PostalAddress",
                "addressLocality": "Budapest",
                "addressCountry": "HU"
            },
            "telephone": "+36-30-123-4567",
            "email": "info@terkovezes-budapest.hu",
            "url": "https://terkovezes-budapest.hu",
            "priceRange": "14000-28000 HUF per m2",
            "areaServed": {
                "@type": "City",
                "name": "Budapest"
            },
            "hasOfferCatalog": {
                "@type": "OfferCatalog",
                "name": "Terasz térkövezés szolgáltatások",
                "itemListElement": [
                    {
                        "@type": "Offer",
                        "itemOffered": {
                            "@type": "Service",
                            "name": "Standard terasz térkövezés",
                            "description": "Alapcsomag: beton térkõ, vízelvezetés, szegélyezés"
                        },
                        "priceSpecification": {
                            "@type": "PriceSpecification",
                            "price": "14000-18000",
                            "priceCurrency": "HUF",
                            "unitText": "per m2"
                        }
                    },
                    {
                        "@type": "Offer",
                        "itemOffered": {
                            "@type": "Service",
                            "name": "Prémium terasz térkövezés",
                            "description": "Antik térkõ, mintázott design, speciális vízelvezetés"
                        },
                        "priceSpecification": {
                            "@type": "PriceSpecification",
                            "price": "20000-28000",
                            "priceCurrency": "HUF",
                            "unitText": "per m2"
                        }
                    }
                ]
            }
        },
        "serviceType": "Terasz térkövezés",
        "category": "Construction",
        "offers": {
            "@type": "Offer",
            "priceCurrency": "HUF",
            "price": "14000-28000",
            "unitText": "per m2",
            "availability": "https://schema.org/InStock",
            "validFrom": "2025-01-01",
            "areaServed": {
                "@type": "City", 
                "name": "Budapest"
            }
        },
        "aggregateRating": {
            "@type": "AggregateRating",
            "ratingValue": "4.9",
            "reviewCount": "94",
            "bestRating": "5"
        }
    }
    </script>

    <!-- Breadcrumb Schema -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
            {
                "@type": "ListItem",
                "position": 1,
                "name": "Fõoldal",
                "item": "https://terkovezes-budapest.hu/"
            },
            {
                "@type": "ListItem", 
                "position": 2,
                "name": "Szolgáltatások",
                "item": "https://terkovezes-budapest.hu/szolgaltatasok"
            },
            {
                "@type": "ListItem",
                "position": 3,
                "name": "Terasz térkövezés",
                "item": "https://terkovezes-budapest.hu/terasz-terkovezes"
            }
        ]
    }
    </script>

    <!-- FAQ Schema -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "FAQPage",
        "mainEntity": [
            {
                "@type": "Question",
                "name": "Mennyibe kerül a terasz térkövezés Budapesten?",
                "acceptedAnswer": {
                    "@type": "Answer",
                    "text": "A terasz térkövezés ára 14.000-28.000 Ft/m2 között mozog. Standard térkõ 14.000-18.000 Ft/m2, antik térkõ 20.000-25.000 Ft/m2, természetes kõ 25.000-28.000 Ft/m2. Az ár tartalmazza a vízelvezetést és szegélyezést is."
                }
            },
            {
                "@type": "Question",
                "name": "Milyen térkõ típusok alkalmasak teraszhoz?",
                "acceptedAnswer": {
                    "@type": "Answer",
                    "text": "Teraszhoz ajánljuk: antik térköveket (koptatott felület), színes térköveket (design), természetes köveket (travertin, mészkõ), csúszásmentes térköveket. Minden típus idõjárásálló és UV-álló."
                }
            },
            {
                "@type": "Question",
                "name": "Hogyan oldják meg a terasz vízelvezetését?",
                "acceptedAnswer": {
                    "@type": "Answer",
                    "text": "Terasz vízelvezetését 1-2%-os lejtéssel oldjuk meg, víznyelõk beépítésével vagy fedett csatornával. Speciális vízáteresztõ fugázóanyagot használunk, így a csapadékvíz nem áll meg a felületen."
                }
            },
            {
                "@type": "Question",
                "name": "Mennyi idõ alatt készül el egy terasz térkövezés?",
                "acceptedAnswer": {
                    "@type": "Answer",
                    "text": "20-40 m2-es terasz térkövezése 4-7 nap alatt elkészül. Beletartozik a tervezés, alapozás, térkõlerakás, fugázás és befejezõ munkák. Bonyolult mintázatok esetén 1-2 nappal több idõt vesz igénybe."
                }
            }
        ]
    }
    </script>

    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-concrete-50 to-concrete-100 py-16 lg:py-24">
        <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid lg:grid-cols-2 gap-12 items-center">
                <div>
                    <nav class="text-sm mb-6" aria-label="Breadcrumb">
                        <ol class="flex space-x-2 text-concrete-600">
                            <li><a href="/" class="hover:text-primary-600">Fõoldal</a></li>
                            <li>/</li>
                            <li><a href="/" class="hover:text-primary-600">Szolgáltatások</a></li>
                            <li>/</li>
                            <li class="text-concrete-800 font-medium">Terasz térkövezés</li>
                        </ol>
                    </nav>
                    
                    <h1 class="text-4xl lg:text-6xl font-bold text-concrete-800 font-heading mb-6">
                        <span class="text-primary-600">Terasz térkövezés</span> Budapesten
                    </h1>
                    <p class="text-xl text-concrete-600 mb-8 leading-relaxed">
                        Elegáns és funkcionális teraszok térkövezése egyedi tervezéssel. 
                        Antik és színes térköök, professzionális vízelvezetés, 5 év garancia.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4">
                        <a href={`${import.meta.env.BASE_URL}kapcsolat`} class="bg-primary-600 hover:bg-primary-700 text-white font-semibold py-4 px-8 rounded-lg transition-colors duration-200 text-center">
                            Ingyenes Tervezés
                        </a>
                        <a href="tel:+36301234567" class="bg-green-600 hover:bg-green-700 text-white font-semibold py-4 px-8 rounded-lg transition-colors duration-200 text-center">
                            Hívj minket azonnal
                        </a>
                    </div>
                </div>
                <div class="relative">
                    <div class="rounded-2xl h-96 overflow-hidden shadow-2xl">
                        <picture>
                            <source srcset="https://storage.googleapis.com/joszaki-reference-photos/normal/taki-group-kft-komuves-yoflindw7m" type="image/webp">
                            <img 
                                src="https://storage.googleapis.com/joszaki-reference-photos/normal/taki-group-kft-komuves-yoflindw7m" 
