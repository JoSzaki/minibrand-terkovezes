            case 'natural':
                weightPerM2 = 150; // kg/m2
                paverTypeName = 'Term√©szetes k≈ë';
                break;
            case 'granite':
                weightPerM2 = 180; // kg/m2
                paverTypeName = 'Gr√°nit kockak≈ë';
                break;
            default:
                weightPerM2 = 120;
                paverTypeName = 'Beton t√©rk≈ë';
        }

        const totalWeight = area * weightPerM2; // kg
        const totalWeightTons = totalWeight / 1000; // tons

        // Base delivery cost based on location
        let baseCost;
        let locationName;
        switch (location) {
            case 'budapest-inner':
                baseCost = 15000;
                locationName = 'Budapest bels≈ë ker√ºletei';
                break;
            case 'budapest-outer':
                baseCost = 20000;
                locationName = 'Budapest k√ºls≈ë ker√ºletei';
                break;
            case 'agglomeration':
                baseCost = 25000;
                locationName = 'Agglomer√°ci√≥ (30 km-ig)';
                break;
            case 'pest-county':
                baseCost = 35000;
                locationName = 'Pest megye';
                break;
            case 'other-county':
                baseCost = 50000;
                locationName = 'Egy√©b megy√©k';
                break;
            default:
                baseCost = 15000;
                locationName = 'Budapest bels≈ë ker√ºletei';
        }

        // Delivery type multiplier
        let multiplier = 1;
        let deliveryTypeName;
        switch (deliveryType) {
            case 'standard':
                multiplier = 1.0;
                deliveryTypeName = 'Standard sz√°ll√≠t√°s';
                break;
            case 'express':
                multiplier = 1.75;
                deliveryTypeName = 'Expressz sz√°ll√≠t√°s';
                break;
            case 'crane':
                multiplier = 1.5;
                deliveryTypeName = 'Daruz√°sos sz√°ll√≠t√°s';
                break;
            default:
                multiplier = 1.0;
                deliveryTypeName = 'Standard sz√°ll√≠t√°s';
        }

        let finalCost = baseCost * multiplier;

        // Free delivery for orders over 5 tons (standard delivery only)
        if (totalWeightTons >= 5 && deliveryType === 'standard') {
            finalCost = 0;
        }

        // Store calculator data for quote request
        deliveryCalculatorData = {
            area: area,
            paverType: paverType,
            paverTypeName: paverTypeName,
            location: location,
            locationName: locationName,
            deliveryType: deliveryType,
            deliveryTypeName: deliveryTypeName,
            totalWeight: totalWeight,
            totalWeightTons: totalWeightTons,
            estimatedCost: finalCost === 0 ? 'INGYENES' : `${new Intl.NumberFormat('hu-HU').format(finalCost)} Ft`,
            calculationType: 'Sz√°ll√≠t√°si k√∂lts√©g kalkul√°tor'
        };

        console.log('Calculated delivery cost:', deliveryCalculatorData);

        const costRangeElement = document.getElementById('deliveryCostRange');
        const resultElement = document.getElementById('deliveryResult');

        if (!costRangeElement || !resultElement) {
            console.error('Result elements not found');
            alert('Hiba t√∂rt√©nt az eredm√©ny megjelen√≠t√©s√©ben!');
            return;
        }

        if (finalCost === 0) {
            costRangeElement.innerHTML = '<span class="text-green-600">INGYENES</span><br><small>5 tonna felett ingyenes a sz√°ll√≠t√°s!</small>';
        } else {
            costRangeElement.textContent = new Intl.NumberFormat('hu-HU').format(finalCost) + ' Ft';
        }

        resultElement.classList.remove('hidden');

        console.log('Delivery result displayed');

        // Scroll to result
        setTimeout(() => {
            resultElement.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }, 100);

        } catch (error) {
            console.error('Error in calculateDeliveryCost:', error);
            alert('Hiba t√∂rt√©nt a sz√°m√≠t√°s sor√°n. K√©rj√ºk pr√≥b√°lja √∫jra, vagy vegye fel vel√ºnk a kapcsolatot.');
        }
    }

