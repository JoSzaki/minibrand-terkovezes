    function calculateDeliveryCost() {
        console.log('Calculate delivery cost function called');

        try {
            const areaInput = document.getElementById('deliveryArea');
            const paverTypeSelect = document.getElementById('deliveryPaverType');
            const locationSelect = document.getElementById('deliveryLocation');
            const deliveryTypeSelect = document.getElementById('deliveryType');

            if (!areaInput || !paverTypeSelect || !locationSelect || !deliveryTypeSelect) {
