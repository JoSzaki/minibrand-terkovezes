---
import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { generateSchemasForPage } from '../schema-config.js';

const title = "Gyakori Kérdések - Térkövezés Budapest | GYIK";
const description = "Gyakori kérdések térkövezésrõl: árak, kivitelezés, tartósság, karbantartás. Minden amit tudni kell a térkövezési projektekrõl.";

// Generate FAQ schema
const faqSchemas = generateSchemasForPage('faq', {
    title: title,
    description: description
});
---

<Layout title={title} description={description}>
