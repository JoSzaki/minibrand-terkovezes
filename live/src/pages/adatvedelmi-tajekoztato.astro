---
import Layout from '../components/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const title = "Adatvédelmi Tájékoztató - Térkövezés Budapest";
const description = "Adatvédelmi tájékoztató: személyes adatok kezelése, cookies használata, felhasználói jogok. GDPR megfelelõség.";
---

<Layout title={title} description={description}>
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">
    {
        "@context": "https://schema.org",
        "@type": "WebPage",
        "name": "Adatvédelmi Tájékoztató",
        "description": "Adatvédelmi tájékoztató a Térkövezés Budapest szolgáltatásaihoz",
        "publisher": {
            "@type": "Organization",
            "name": "Térkövezés Budapest"
        },
        "datePublished": "2025-01-01",
        "dateModified": "2025-01-01"
    }
    </script>

    <Header />
    
    <!-- Breadcrumb -->
    <nav class="bg-concrete-50 py-4">
        <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
            <ol class="flex items-center space-x-2 text-sm text-concrete-600">
                <li><a href="/" class="hover:text-primary-600">Fõoldal</a></li>
                <li class="flex items-center">
                    <svg class="w-4 h-4 mx-2" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-concrete-800 font-medium">Adatvédelmi Tájékoztató</span>
                </li>
            </ol>
        </div>
    </nav>
    
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-concrete-50 to-concrete-100 py-16 lg:py-24">
        <div class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <h1 class="text-4xl lg:text-6xl font-bold text-concrete-800 font-heading mb-6">
                    <span class="text-primary-600">Adatvédelmi</span> Tájékoztató
                </h1>
                <p class="text-xl text-concrete-600 mb-8 leading-relaxed max-w-4xl mx-auto">
                    Az Ön adatainak védelme kiemelt fontosságú számunkra. Ez a tájékoztató részletesen ismerteti, 
                    hogyan kezeljük személyes adatait szolgáltatásaink nyújtása során.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    <div class="bg-white rounded-lg px-4 py-2 shadow-sm">
                        <span class="text-sm text-concrete-500">Utolsó módosítás:</span>
                        <span class="font-semibold text-concrete-800 ml-2">2025. január 1.</span>
                    </div>
                    <div class="bg-white rounded-lg px-4 py-2 shadow-sm">
                        <span class="text-sm text-concrete-500">GDPR megfelelõ</span>
                        <span class="font-semibold text-primary-600 ml-2">?</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <section class="py-16 bg-white">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="prose prose-lg max-w-none">
                
                <!-- 1. Adatkezelõ azonosítása -->
                <div class="mb-12">
                    <h2 class="text-3xl font-bold text-concrete-800 mb-6 flex items-center">
                        <span class="bg-primary-100 text-primary-600 rounded-full w-8 h-8 flex items-center justify-center text-lg font-bold mr-4">1</span>
                        Adatkezelõ azonosítása
                    </h2>
                    <div class="bg-concrete-50 rounded-xl p-6">
                        <p class="text-concrete-700 mb-4"><strong>Cégnév:</strong> Térkövezés Budapest</p>
                        <p class="text-concrete-700 mb-4"><strong>Székhely:</strong> Budapest, Magyarország</p>
                        <p class="text-concrete-700 mb-4"><strong>E-mail cím:</strong> info@terkovezes-budapest.hu</p>
                        <p class="text-concrete-700 mb-4"><strong>Telefonszám:</strong> +36 30 123 4567</p>
                        <p class="text-concrete-700"><strong>Weboldal:</strong> https://terkovezes-budapest.hu</p>
                    </div>
                </div>

                <!-- 2. Kezelt személyes adatok köre -->
                <div class="mb-12">
                    <h2 class="text-3xl font-bold text-concrete-800 mb-6 flex items-center">
                        <span class="bg-primary-100 text-primary-600 rounded-full w-8 h-8 flex items-center justify-center text-lg font-bold mr-4">2</span>
                        Kezelt személyes adatok köre
                    </h2>
                    
                    <h3 class="text-2xl font-semibold text-concrete-800 mb-4">Kapcsolatfelvételi adatok</h3>
                    <ul class="list-disc list-inside text-concrete-700 mb-6 space-y-2">
                        <li>Név (vezeték- és keresztnév)</li>
                        <li>E-mail cím</li>
                        <li>Telefonszám</li>
                        <li>Címadatok (projekt helyszíne)</li>
                        <li>Üzenet tartalma</li>
                    </ul>

                    <h3 class="text-2xl font-semibold text-concrete-800 mb-4">Technikai adatok</h3>
                    <ul class="list-disc list-inside text-concrete-700 mb-6 space-y-2">
                        <li>IP cím</li>
                        <li>Browser típusa és verziója</li>
                        <li>Operációs rendszer</li>
                        <li>Látogatott oldalak</li>
                        <li>Látogatás idõpontja</li>
                    </ul>
                </div>

                <!-- 3. Adatkezelés célja és jogalapja -->
                <div class="mb-12">
                    <h2 class="text-3xl font-bold text-concrete-800 mb-6 flex items-center">
                        <span class="bg-primary-100 text-primary-600 rounded-full w-8 h-8 flex items-center justify-center text-lg font-bold mr-4">3</span>
                        Adatkezelés célja és jogalapja
                    </h2>
                    
                    <div class="grid md:grid-cols-2 gap-6">
                        <div class="bg-white border border-concrete-200 rounded-xl p-6">
                            <h3 class="text-xl font-semibold text-concrete-800 mb-4">?? Kapcsolatfelvétel</h3>
                            <p class="text-concrete-700 mb-3"><strong>Cél:</strong> Érdeklõdések kezelése, ajánlatok készítése</p>
                            <p class="text-concrete-700"><strong>Jogalap:</strong> Érintett hozzájárulása (GDPR 6. cikk (1) a) pont)</p>
                        </div>
                        
                        <div class="bg-white border border-concrete-200 rounded-xl p-6">
                            <h3 class="text-xl font-semibold text-concrete-800 mb-4">?? Weboldal mûködtetés</h3>
                            <p class="text-concrete-700 mb-3"><strong>Cél:</strong> Weboldal technikai mûködtetése, statisztikák</p>
                            <p class="text-concrete-700"><strong>Jogalap:</strong> Jogos érdek (GDPR 6. cikk (1) f) pont)</p>
                        </div>
                        
                        <div class="bg-white border border-concrete-200 rounded-xl p-6">
                            <h3 class="text-xl font-semibold text-concrete-800 mb-4">?? Jogi kötelezettség</h3>
                            <p class="text-concrete-700 mb-3"><strong>Cél:</strong> Számviteli, adózási kötelezettségek</p>
                            <p class="text-concrete-700"><strong>Jogalap:</strong> Jogi kötelezettség (GDPR 6. cikk (1) c) pont)</p>
                        </div>
                        
                        <div class="bg-white border border-concrete-200 rounded-xl p-6">
                            <h3 class="text-xl font-semibold text-concrete-800 mb-4">?? Szerzõdés teljesítése</h3>
                            <p class="text-concrete-700 mb-3"><strong>Cél:</strong> Megrendelések teljesítése, ügyfélszolgálat</p>
                            <p class="text-concrete-700"><strong>Jogalap:</strong> Szerzõdés teljesítése (GDPR 6. cikk (1) b) pont)</p>
                        </div>
                    </div>
                </div>

                <!-- 4. Adatok tárolásának idõtartama -->
                <div class="mb-12">
                    <h2 class="text-3xl font-bold text-concrete-800 mb-6 flex items-center">
                        <span class="bg-primary-100 text-primary-600 rounded-full w-8 h-8 flex items-center justify-center text-lg font-bold mr-4">4</span>
                        Adatok tárolásának idõtartama
                    </h2>
                    
                    <div class="overflow-x-auto">
                        <table class="w-full border-collapse border border-concrete-200 rounded-xl overflow-hidden">
                            <thead class="bg-primary-50">
                                <tr>
                                    <th class="border border-concrete-200 px-6 py-4 text-left font-semibold text-concrete-800">Adattípus</th>
                                    <th class="border border-concrete-200 px-6 py-4 text-left font-semibold text-concrete-800">Tárolási idõtartam</th>
                                    <th class="border border-concrete-200 px-6 py-4 text-left font-semibold text-concrete-800">Indoklás</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="bg-white">
                                    <td class="border border-concrete-200 px-6 py-4 text-concrete-700">Kapcsolatfelvételi adatok</td>
                                    <td class="border border-concrete-200 px-6 py-4 text-concrete-700">3 év</td>
                                    <td class="border border-concrete-200 px-6 py-4 text-concrete-700">Üzleti kapcsolat fenntartása</td>
                                </tr>
                                <tr class="bg-concrete-25">
                                    <td class="border border-concrete-200 px-6 py-4 text-concrete-700">Szerzõdési adatok</td>
                                    <td class="border border-concrete-200 px-6 py-4 text-concrete-700">8 év</td>
                                    <td class="border border-concrete-200 px-6 py-4 text-concrete-700">Számviteli kötelezettség</td>
                                </tr>
                                <tr class="bg-white">
                                    <td class="border border-concrete-200 px-6 py-4 text-concrete-700">Weboldal látogatási adatok</td>
                                    <td class="border border-concrete-200 px-6 py-4 text-concrete-700">2 év</td>
                                    <td class="border border-concrete-200 px-6 py-4 text-concrete-700">Statisztikai elemzés</td>
                                </tr>
                                <tr class="bg-concrete-25">
                                    <td class="border border-concrete-200 px-6 py-4 text-concrete-700">Cookie-k</td>
                                    <td class="border border-concrete-200 px-6 py-4 text-concrete-700">13 hónap</td>
                                    <td class="border border-concrete-200 px-6 py-4 text-concrete-700">Technikai mûködés</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- 5. Adatok címzettjei -->
                <div class="mb-12">
                    <h2 class="text-3xl font-bold text-concrete-800 mb-6 flex items-center">
                        <span class="bg-primary-100 text-primary-600 rounded-full w-8 h-8 flex items-center justify-center text-lg font-bold mr-4">5</span>
                        Adatok címzettjei
                    </h2>
                    
                    <div class="bg-concrete-50 rounded-xl p-6">
                        <p class="text-concrete-700 mb-4">Személyes adatait az alábbi esetekben és címzettek számára továbbíthatjuk:</p>
                        <ul class="list-disc list-inside text-concrete-700 space-y-2">
                            <li><strong>Könyvelõ iroda:</strong> számviteli kötelezettségek teljesítése céljából</li>
                            <li><strong>Jogi képviselõ:</strong> jogi tanácsadás és képviselet céljából</li>
                            <li><strong>IT szolgáltatók:</strong> weboldal üzemeltetése és karbantartása céljából</li>
                            <li><strong>Hatóságok:</strong> jogszabályi kötelezettség alapján</li>
                        </ul>
                        <div class="mt-6 p-4 bg-primary-50 rounded-lg border-l-4 border-primary-400">
                            <p class="text-concrete-700"><strong>Fontos:</strong> Adatait kizárólag az EU/EGT területén mûködõ szolgáltatóknak továbbítjuk, vagy megfelelõ adatvédelmi garanciák mellett.</p>
                        </div>
                    </div>
                </div>

                <!-- 6. Az érintett jogai -->
                <div class="mb-12">
                    <h2 class="text-3xl font-bold text-concrete-800 mb-6 flex items-center">
                        <span class="bg-primary-100 text-primary-600 rounded-full w-8 h-8 flex items-center justify-center text-lg font-bold mr-4">6</span>
                        Az érintett jogai
                    </h2>
                    
                    <div class="grid md:grid-cols-2 gap-6">
                        <div class="bg-white border border-concrete-200 rounded-xl p-6">
                            <h3 class="text-xl font-semibold text-concrete-800 mb-4">?? Tájékoztatáshoz való jog</h3>
                            <p class="text-concrete-700">Jogosult tájékoztatást kérni személyes adatai kezelésérõl.</p>
                        </div>
                        
                        <div class="bg-white border border-concrete-200 rounded-xl p-6">
                            <h3 class="text-xl font-semibold text-concrete-800 mb-4">?? Helyesbítéshez való jog</h3>
                            <p class="text-concrete-700">Kérheti pontatlan vagy hiányos adatai javítását.</p>
                        </div>
                        
                        <div class="bg-white border border-concrete-200 rounded-xl p-6">
                            <h3 class="text-xl font-semibold text-concrete-800 mb-4">??? Törléshez való jog</h3>
                            <p class="text-concrete-700">Bizonyos feltételek mellett kérheti adatai törlését.</p>
                        </div>
                        
                        <div class="bg-white border border-concrete-200 rounded-xl p-6">
                            <h3 class="text-xl font-semibold text-concrete-800 mb-4">?? Korlátozáshoz való jog</h3>
                            <p class="text-concrete-700">Kérheti adatai kezelésének korlátozását.</p>
                        </div>
                        
                        <div class="bg-white border border-concrete-200 rounded-xl p-6">
                            <h3 class="text-xl font-semibold text-concrete-800 mb-4">?? Adathordozhatósághoz való jog</h3>
                            <p class="text-concrete-700">Kérheti adatai strukturált formában való kiadását.</p>
                        </div>
                        
                        <div class="bg-white border border-concrete-200 rounded-xl p-6">
                            <h3 class="text-xl font-semibold text-concrete-800 mb-4">? Tiltakozáshoz való jog</h3>
                            <p class="text-concrete-700">Tiltakozhat adatai kezelése ellen bizonyos esetekben.</p>
                        </div>
                    </div>

                    <div class="mt-8 p-6 bg-primary-50 rounded-xl border-l-4 border-primary-400">
                        <h3 class="text-xl font-semibold text-concrete-800 mb-4">?? Hogyan gyakorolhatja jogait?</h3>
                        <p class="text-concrete-700 mb-4">Jogai gyakorlása céljából forduljon hozzánk az alábbi elérhetõségeken:</p>
                        <ul class="list-disc list-inside text-concrete-700 space-y-1">
                            <li><strong>E-mail:</strong> info@terkovezes-budapest.hu</li>
                            <li><strong>Telefon:</strong> +36 30 123 4567</li>
                            <li><strong>Postai cím:</strong> Budapest, Magyarország</li>
                        </ul>
                        <p class="text-concrete-700 mt-4"><strong>Válaszadási határidõ:</strong> Kérésére 30 napon belül válaszolunk.</p>
                    </div>
                </div>

                <!-- 7. Cookie-k használata -->
                <div class="mb-12">
                    <h2 class="text-3xl font-bold text-concrete-800 mb-6 flex items-center">
                        <span class="bg-primary-100 text-primary-600 rounded-full w-8 h-8 flex items-center justify-center text-lg font-bold mr-4">7</span>
                        Cookie-k használata
                    </h2>
                    
                    <div class="space-y-6">
                        <div class="bg-concrete-50 rounded-xl p-6">
                            <h3 class="text-xl font-semibold text-concrete-800 mb-4">?? Mi az a cookie?</h3>
                            <p class="text-concrete-700">A cookie-k kis méretû szöveges fájlok, amelyeket a weboldal a látogató eszközén tárol a jobb felhasználói élmény biztosítása érdekében.</p>
                        </div>
                        
                        <div class="grid md:grid-cols-3 gap-6">
                            <div class="bg-white border border-concrete-200 rounded-xl p-6">
                                <h4 class="text-lg font-semibold text-concrete-800 mb-3">?? Technikai cookie-k</h4>
                                <p class="text-concrete-700 text-sm mb-3">A weboldal alapvetõ mûködéséhez szükségesek.</p>
                                <span class="inline-block bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full">Mindig aktív</span>
                            </div>
                            
                            <div class="bg-white border border-concrete-200 rounded-xl p-6">
                                <h4 class="text-lg font-semibold text-concrete-800 mb-3">?? Analitikai cookie-k</h4>
                                <p class="text-concrete-700 text-sm mb-3">Weboldal használatának elemzésére szolgálnak.</p>
                                <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">Opcionális</span>
                            </div>
                            
                            <div class="bg-white border border-concrete-200 rounded-xl p-6">
                                <h4 class="text-lg font-semibold text-concrete-800 mb-3">?? Marketing cookie-k</h4>
                                <p class="text-concrete-700 text-sm mb-3">Személyre szabott tartalom megjelenítésére.</p>
                                <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2 py-1 rounded-full">Opcionális</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 8. Adatbiztonság -->
                <div class="mb-12">
                    <h2 class="text-3xl font-bold text-concrete-800 mb-6 flex items-center">
                        <span class="bg-primary-100 text-primary-600 rounded-full w-8 h-8 flex items-center justify-center text-lg font-bold mr-4">8</span>
                        Adatbiztonság
                    </h2>
                    
                    <div class="grid md:grid-cols-2 gap-6">
                        <div class="bg-white border border-concrete-200 rounded-xl p-6">
                            <h3 class="text-xl font-semibold text-concrete-800 mb-4">?? Technikai védelm</h3>
                            <ul class="list-disc list-inside text-concrete-700 space-y-2">
                                <li>SSL/TLS titkosítás</li>
                                <li>Biztonságos szerverek</li>
                                <li>Rendszeres biztonsági frissítések</li>
                                <li>Hozzáférés-korlátozás</li>
                            </ul>
                        </div>
                        
                        <div class="bg-white border border-concrete-200 rounded-xl p-6">
                            <h3 class="text-xl font-semibold text-concrete-800 mb-4">?? Szervezési intézkedések</h3>
                            <ul class="list-disc list-inside text-concrete-700 space-y-2">
                                <li>Munkatársi képzések</li>
                                <li>Titoktartási megállapodások</li>
                                <li>Hozzáférési jogosultságok</li>
                                <li>Incidenskezelési eljárások</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- 9. Panasztétel -->
                <div class="mb-12">
                    <h2 class="text-3xl font-bold text-concrete-800 mb-6 flex items-center">
                        <span class="bg-primary-100 text-primary-600 rounded-full w-8 h-8 flex items-center justify-center text-lg font-bold mr-4">9</span>
                        Panasztétel lehetõsége
                    </h2>
                    
                    <div class="bg-orange-50 border border-orange-200 rounded-xl p-6">
                        <p class="text-concrete-700 mb-4">Ha úgy érzi, hogy személyes adatainak kezelése nem megfelelõ, panaszt tehet:</p>
                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <h3 class="text-lg font-semibold text-concrete-800 mb-3">?? Nálunk</h3>
                                <p class="text-concrete-700 text-sm">info@terkovezes-budapest.hu</p>
                            </div>
                            <div>
                                <h3 class="text-lg font-semibold text-concrete-800 mb-3">??? Hatóságnál</h3>
                                <p class="text-concrete-700 text-sm">Nemzeti Adatvédelmi és Információszabadság Hatóság<br>
                                <a href="https://naih.hu" class="text-primary-600 hover:text-primary-800">naih.hu</a></p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- 10. Módosítások -->
                <div class="mb-12">
                    <h2 class="text-3xl font-bold text-concrete-800 mb-6 flex items-center">
                        <span class="bg-primary-100 text-primary-600 rounded-full w-8 h-8 flex items-center justify-center text-lg font-bold mr-4">10</span>
                        Tájékoztató módosítása
                    </h2>
                    
                    <div class="bg-concrete-50 rounded-xl p-6">
                        <p class="text-concrete-700 mb-4">Fenntartjuk a jogot, hogy ezt az adatvédelmi tájékoztatót bármikor módosítsuk. A módosítások a weboldalon való közzététellel lépnek hatályba.</p>
                        <p class="text-concrete-700">Javasoljuk, hogy idõnként látogassa meg ezt az oldalt az aktuális adatvédelmi gyakorlatunk megismerése érdekében.</p>
                    </div>
                </div>

                <!-- Kapcsolat -->
                <div class="bg-primary-50 rounded-xl p-8 text-center">
                    <h2 class="text-2xl font-bold text-concrete-800 mb-4">?? Kérdése van?</h2>
                    <p class="text-concrete-700 mb-6">Ha bármilyen kérdése van az adatvédelemmel kapcsolatban, forduljon hozzánk bizalommal!</p>
                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a href="mailto:info@terkovezes-budapest.hu" class="bg-primary-600 text-white px-6 py-3 rounded-lg hover:bg-primary-700 transition-colors duration-200 font-semibold">
                            ?? E-mail küldése
                        </a>
                        <a href="tel:+36301234567" class="bg-white text-primary-600 border border-primary-600 px-6 py-3 rounded-lg hover:bg-primary-50 transition-colors duration-200 font-semibold">
                            ?? Telefonhívás
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <Footer />
</Layout>
